{
  "collectionName": "components_content_collection_alls",
  "info": {
    "displayName": "CollectionAll",
    "icon": "apps",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255
    },
    "link": {
      "type": "string",
      "maxLength": 255,
      "regex": "^\\/?[-a-z0-9_]{1,512}"
    },
    "linkTitle": {
      "type": "string",
      "maxLength": 255
    },
    "entity": {
      "type": "customField",
      "options": [
        "Образовательные программы:educational-programs",
        "Курсы ДПО:dpo-courses",
        "Выпускники:graduates",
        "Сотрудники:employees",
        "Структуры(Подразделения):departments"
      ],
      "required": true,
      "customField": "plugin::multi-select.multi-select"
    },
    "linkDescription": {
      "type": "text",
      "maxLength": 255
    },
    "connected": {
      "type": "boolean",
      "default": false
    },
    "showSearch": {
      "type": "boolean",
      "default": false
    },
    "showFilters": {
      "type": "boolean",
      "default": false
    },
    "departmentsConfig": {
      "displayName": "structureConfig",
      "type": "component",
      "repeatable": false,
      "component": "config.structure-config"
    },
    "employeesConfig": {
      "displayName": "employeesConfig",
      "type": "component",
      "repeatable": false,
      "component": "config.employees-config"
    }
  }
}
