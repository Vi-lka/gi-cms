{
  "collectionName": "components_content_icons_blocks",
  "info": {
    "displayName": "IconsBlock",
    "icon": "bulletList",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255
    },
    "link": {
      "type": "string",
      "maxLength": 255,
      "regex": "^\\/?[-a-z0-9_]{1,512}"
    },
    "linkTitle": {
      "type": "string",
      "maxLength": 255
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "backgroundOn": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "isList": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "items.icons-block-item",
      "required": true,
      "min": 1
    },
    "moreTitle": {
      "type": "string",
      "maxLength": 255
    },
    "moreLink": {
      "type": "text",
      "regex": "^https?:\\/\\/(?:www\\.)?[-a-zA-Z0-9@:%.,_\\+~#=]{1,256}(?:.[a-zA-Z0-9()]{1,6})\\b(?:[-a-zA-Z0-9()@:%_\\+.,~#?&\\/=]*)$"
    },
    "alignImage": {
      "type": "enumeration",
      "enum": [
        "left",
        "right"
      ],
      "required": true,
      "default": "left"
    }
  }
}
